<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.WelcomePage.Fragments.ThemeFragment">

    <RadioGroup
            android:background="@drawable/radiobutton_back"
            android:id="@+id/radio_group_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="80dp"

    >

        <android.support.v7.widget.AppCompatRadioButton
                android:background="@drawable/radiobutton_back"
                android:id="@+id/radio_button_theme_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:textSize="26sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Light Theme" />

        <android.support.v7.widget.AppCompatRadioButton
                android:background="@drawable/radiobutton_back"
                android:id="@+id/radio_button_theme_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="26sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dark Theme" />
    </RadioGroup>



</android.support.constraint.ConstraintLayout>