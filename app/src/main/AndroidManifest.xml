<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.domash.yandexlauncher">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/my_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppThemeLight">
        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="4dca848f52f8c6747b4c84d918c019249fa9c9e8"/>

        <activity
                android:name=".MainActivity"
                android:label="MainActivity"
                android:theme="@style/AppThemeLight">
        </activity>

        <activity
                android:name=".activities.WelcomePage.WelcomePage"
                android:label="WelcomePage"
                android:theme="@style/AppThemeLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.LauncherPage.LauncherActivity"
                android:label="LauncherActivity"
                android:theme="@style/AppThemeLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>